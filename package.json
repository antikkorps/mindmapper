{
  "name": "mindmapper",
  "version": "1.0.0",
  "description": "Interactive mindmap application with real-time saving",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=@mindmapper/frontend",
    "dev:backend": "npm run dev --workspace=@mindmapper/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=@mindmapper/frontend",
    "build:backend": "npm run build --workspace=@mindmapper/backend",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "test:e2e": "npm run test:e2e --workspace=@mindmapper/frontend",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:watch": "npm run test:watch --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"packages/**/*.{js,jsx,ts,tsx,vue,json,css,md}\"",
    "format:check": "prettier --check \"packages/**/*.{js,jsx,ts,tsx,vue,json,css,md}\"",
    "type-check": "npm run type-check --workspaces",
    "db:migrate": "npm run db:migrate --workspace=@mindmapper/backend",
    "db:seed": "npm run db:seed --workspace=@mindmapper/backend",
    "db:reset": "npm run db:reset --workspace=@mindmapper/backend",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "mindmap",
    "visualization",
    "vue",
    "koa",
    "postgresql"
  ],
  "author": "MindMapper Team",
  "license": "MIT"
}
